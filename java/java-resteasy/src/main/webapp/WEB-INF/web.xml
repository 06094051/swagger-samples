<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:j2ee="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee  http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <servlet>
        <servlet-name>resteasy</servlet-name>
        <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>io.swagger.sample.PetStoreApplication</param-value>
        </init-param>
        <init-param>
            <param-name>swagger.scanner.id</param-name>
            <param-value>test.1</param-value>
        </init-param>
        <init-param>
            <param-name>resteasy.servlet.mapping.prefix</param-name>
            <param-value>/api-a</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>resteasy</servlet-name>
        <url-pattern>/api-a/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>resteasyadditional</servlet-name>
        <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>io.swagger.sample.PetStoreApplication</param-value>
        </init-param>
        <init-param>
            <param-name>swagger.scanner.id</param-name>
            <param-value>test.2</param-value>
        </init-param>
        <init-param>
            <param-name>resteasy.servlet.mapping.prefix</param-name>
            <param-value>/api-b</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>resteasyadditional</servlet-name>
        <url-pattern>/api-b/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ApiOriginFilter</filter-name>
        <filter-class>io.swagger.sample.util.ApiOriginFilter</filter-class>
    </filter>

    <servlet>
        <servlet-name>Bootstrap</servlet-name>
        <servlet-class>io.swagger.sample.Bootstrap</servlet-class>
        <init-param>
            <param-name>swagger.scanner.id</param-name>
            <param-value>test.1</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>BootstrapAdditional</servlet-name>
        <servlet-class>io.swagger.sample.BootstrapAdditional</servlet-class>
        <init-param>
            <param-name>swagger.scanner.id</param-name>
            <param-value>test.2</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <filter-mapping>
        <filter-name>ApiOriginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
